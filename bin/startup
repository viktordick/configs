#!/bin/fish

if [ $hostname = vdick-notebook ]
    thunderbird &
    gtk-launch teams &
    firefox &
end

kanshi &

while true
    sleep 10

    swaymsg output '*' bg (random choice ~/.local/share/wallpapers/*) fit '#000000'

    # suspend on low battery
    set -l out (acpi | grep -v unavailable)
    string match -q -- 'Battery 0: Discharging*' $out; or continue
    set -l percent (echo $out | cut -d, -f2 - | sed s.%..)
    test $percent -lt 10; and notify-send -u critical -- 'Battery low!'
    test $percent -lt 5; and mysuspend

end;
